<Page x:Class="semes.Pages.CommunityDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converters="clr-namespace:semes.Converters"
      Title="CommunityDetailPage">
    <Page.Resources>
        <converters:AuthorVisibilityConverter x:Key="AuthorVisibilityConverter"/>

        <!-- 하이테크 블루 그라데이션 -->
        <LinearGradientBrush x:Key="MainBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#E3F2FD" Offset="0"/>
            <GradientStop Color="#F5F5F5" Offset="1"/>
        </LinearGradientBrush>

        <!-- 헤더 그라데이션 -->
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1976D2" Offset="0"/>
            <GradientStop Color="#2196F3" Offset="1"/>
        </LinearGradientBrush>

        <!-- 카드 스타일 -->
        <Style x:Key="TechCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1E5E9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#1976D2" BlurRadius="25" ShadowDepth="8" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary 버튼 스타일 -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" 
                                CornerRadius="25"
                                Padding="20,10"
                                MinWidth="120"
                                Height="44">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#1976D2" Offset="0"/>
                                    <GradientStop Color="#2196F3" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#1976D2" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#1976D2" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Secondary 버튼 스타일 -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" 
                                CornerRadius="25"
                                BorderThickness="2"
                                Background="White"
                                Padding="20,10"
                                MinWidth="120"
                                Height="44">
                            <Border.BorderBrush>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#1976D2" Offset="0"/>
                                    <GradientStop Color="#2196F3" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.BorderBrush>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.05">
                                            <GradientStop Color="#1976D2" Offset="0"/>
                                            <GradientStop Color="#2196F3" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#1976D2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Danger 버튼 스타일 -->
        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" 
                                CornerRadius="25"
                                Padding="20,10"
                                MinWidth="120"
                                Height="44">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#D32F2F" Offset="0"/>
                                    <GradientStop Color="#F44336" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#D32F2F" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#D32F2F" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource MainBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 헤더 영역 -->
        <Border Grid.Row="0" Background="{StaticResource HeaderGradient}" Padding="30,25">
            <Border.Effect>
                <DropShadowEffect Color="#1976D2" BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel Orientation="Horizontal">
                <!-- CPU 칩 아이콘 -->
                <Border Background="#FFFFFF" 
                        CornerRadius="50" 
                        Width="50" 
                        Height="50" 
                        Margin="0,0,20,0">
                    <Grid>
                        <Rectangle Width="30" Height="30" Fill="#1976D2" RadiusX="3" RadiusY="3"/>
                        <Rectangle Width="18" Height="18" Fill="White" RadiusX="2" RadiusY="2"/>
                        <Rectangle Width="6" Height="2" Fill="#1976D2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <Rectangle Width="6" Height="2" Fill="#1976D2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <Rectangle Width="2" Height="6" Fill="#1976D2" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>
                        <Rectangle Width="2" Height="6" Fill="#1976D2" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10"/>
                    </Grid>
                </Border>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Text="게시글 상세보기">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#1976D2" BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock FontSize="14" 
                               Foreground="#E3F2FD" 
                               Text="SEMES 아산 사업장" 
                               Margin="0,5,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 메인 콘텐츠 영역 -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      Padding="30"
                      Background="Transparent">
            <Border Style="{StaticResource TechCardStyle}">
                <StackPanel Margin="40">
                    <!-- 제목 섹션 -->
                    <StackPanel Margin="0,0,0,30">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                            <Border Background="{StaticResource HeaderGradient}" 
                                    CornerRadius="25" 
                                    Padding="12,8" 
                                    Margin="0,0,15,0">
                                <Border.Effect>
                                    <DropShadowEffect Color="#1976D2" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                                </Border.Effect>
                                <!-- 제목 아이콘 -->
                                <Path Fill="White" 
                                    Data="M5 4v3h5.5v12h3V7H19V4z"
                                      Stretch="Uniform"
                                      Width="16"
                                      Height="16"/>
                            </Border>
                            <TextBlock Text="제목" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="#333"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock Text="{Binding Post.Title}" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="#1976D2"
                                   TextWrapping="Wrap"
                                   Margin="15,0,0,0"/>
                    </StackPanel>

                    <!-- 구분선 -->
                    <Border Height="1" 
                            Background="#E1E5E9" 
                            Margin="0,0,0,30"/>

                    <!-- 내용 섹션 -->
                    <StackPanel Margin="0,0,0,40">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Border Background="{StaticResource HeaderGradient}" 
                                    CornerRadius="25" 
                                    Padding="12,8" 
                                    Margin="0,0,15,0">
                                <Border.Effect>
                                    <DropShadowEffect Color="#1976D2" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                                </Border.Effect>
                                <!-- 내용 아이콘 -->
                                <Path Fill="White" 
                                      Data="M3 3h18v2H3zm0 4h18v2H3zm0 4h18v2H3zm0 4h18v2H3z"
                                      Stretch="Uniform"
                                      Width="16"
                                      Height="16"/>
                            </Border>
                            <TextBlock Text="내용" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="#333"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock Text="{Binding Post.Content}" 
                                   FontSize="16" 
                                   Foreground="#555"
                                   TextWrapping="Wrap"
                                   LineHeight="22"
                                   Margin="15,0,0,0"/>
                    </StackPanel>

                    <!-- 버튼 영역 -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Margin="0,20,0,0">
                        <!-- 뒤로가기 버튼 -->
                        <Button Style="{StaticResource SecondaryButton}"
                                Click="Back_Click"
                                Margin="0,0,15,0">
                            <StackPanel Orientation="Horizontal">
                                <!-- Back 아이콘 -->
                                <Path Fill="#1976D2" 
                                      Data="M19 7v4H5.83l3.58-3.59L8 6l-6 6 6 6 1.41-1.41L5.83 13H21V7z"
                                      Stretch="Uniform"
                                      Width="16"
                                      Height="16"
                                      Margin="0,0,8,0"/>
                                <TextBlock Text="뒤로가기"/>
                            </StackPanel>
                        </Button>

                        <!-- 수정 버튼 -->
                        <Button Style="{StaticResource SecondaryButton}"
                                Click="Edit_Click"
                                Margin="0,0,15,0">
                            <Button.Visibility>
                                <MultiBinding Converter="{StaticResource AuthorVisibilityConverter}">
                                    <Binding Path="Post.Author"/>
                                    <Binding Path="CurrentUser"/>
                                </MultiBinding>
                            </Button.Visibility>
                            <StackPanel Orientation="Horizontal">
                                <!-- Edit 아이콘 -->
                                <Path Fill="#1976D2" 
                                      Data="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"
                                      Stretch="Uniform"
                                      Width="16"
                                      Height="16"
                                      Margin="0,0,8,0"/>
                                <TextBlock Text="수정"/>
                            </StackPanel>
                        </Button>

                        <!-- 삭제 버튼 -->
                        <Button Style="{StaticResource DangerButton}"
                                Click="Delete_Click">
                            <Button.Visibility>
                                <MultiBinding Converter="{StaticResource AuthorVisibilityConverter}">
                                    <Binding Path="Post.Author"/>
                                    <Binding Path="CurrentUser"/>
                                </MultiBinding>
                            </Button.Visibility>
                            <StackPanel Orientation="Horizontal">
                                <!-- Delete 아이콘 -->
                                <Path Fill="White" 
                                      Data="M19 4h-3.5l-1-1h-5l-1 1H5v2h14M6 19a2 2 0 002 2h8a2 2 0 002-2V7H6v12z"
                                      Stretch="Uniform"
                                      Width="16"
                                      Height="16"
                                      Margin="0,0,8,0"/>
                                <TextBlock Text="삭제"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Page>