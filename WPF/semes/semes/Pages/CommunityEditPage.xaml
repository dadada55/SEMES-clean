<Page x:Class="semes.Pages.CommunityEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="CommunityEditPage">
    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <materialDesign:Card Padding="30" Margin="50" Background="White">
            <StackPanel>
                <TextBox x:Name="txtTitle"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="제목"
                         Margin="0 0 0 10" />
                <TextBox x:Name="txtContent"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="내용"
                         Height="150"
                         TextWrapping="Wrap"
                         AcceptsReturn="True" />
                <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                    <Button Content="저장" Click="Save_Click" Width="80"
                            Style="{StaticResource MaterialDesignOutlinedButton}" />
                    <Button Content="취소" Click="Cancel_Click" Width="80" Margin="10 0 0 0"
                            Style="{StaticResource MaterialDesignOutlinedButton}" />
                </StackPanel>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Page>
