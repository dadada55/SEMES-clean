<Window x:Class="semes.Features.Auth.Views.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="환영합니다" 
        Height="350" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Loaded="Window_Loaded">

    <Border Background="White" BorderBrush="LightGray" BorderThickness="1" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 로고 영역 -->
            <Border Grid.Row="0" Height="60" Background="#FF0078D7" CornerRadius="10,10,0,0">
                <TextBlock Text="SEMES" 
                           FontSize="28" 
                           FontWeight="Bold"
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
            </Border>

            <!-- 메인 컨텐트 -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 왼쪽 이미지 영역 -->
                <Grid Grid.Column="0" Margin="20">
                    <Border Background="#F5F5F5"
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1" 
                            CornerRadius="8"
                            ClipToBounds="True">
                        <Image x:Name="CompanyImage"
                               Source="/semes;component/Resources/semes_comp.png"
                               Margin="5" 
                               Stretch="UniformToFill"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Border>
                </Grid>

                <!-- 오른쪽 컨텐트 영역 -->
                <StackPanel Grid.Column="1" Margin="15" VerticalAlignment="Center">
                    <TextBlock 
                               FontSize="22" 
                               FontWeight="Bold"
                               Foreground="#FF0078D7"
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,15" Width="190"><Run Text="We Make "/><Run Language="ko-kr" Text="Answer"/></TextBlock>

                    <TextBlock x:Name="lblUsername" 
                               Text="환영합니다, {사용자명}님!"
                               FontSize="16" 
                               HorizontalAlignment="Center"
                               Foreground="#333333"
                               Margin="0,0,0,15"/>

                    <!-- 원형 프로그레스바 영역 -->
                    <Grid Width="140" Height="140" Margin="0,15">
                        <!-- 배경 원 -->
                        <Ellipse Width="140" 
                                 Height="140"
                                 Stroke="#E1E1E1" 
                                 StrokeThickness="8"
                                 HorizontalAlignment="Center"/>

                        <!-- 프로그레스 원 -->
                        <Ellipse Width="140" 
                                 Height="140"
                                 Stroke="#FF0078D7" 
                                 StrokeThickness="8"
                                 StrokeDashArray="439.8"
                                 StrokeDashOffset="439.8"
                                 x:Name="progressCircle"
                                 HorizontalAlignment="Center">
                            <Ellipse.RenderTransform>
                                <RotateTransform Angle="-90" CenterX="70" CenterY="70"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>

                        <!-- 퍼센트 표시 -->
                        <TextBlock x:Name="lblProgress"
                                   Text="0%"
                                   FontSize="26"
                                   FontWeight="Bold"
                                   Foreground="#333333"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>

                        <!-- 로딩 텍스트 -->
                        <TextBlock Text="데이터 로드 중..."
                                   FontSize="12"
                                   Foreground="#666666"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Top"
                                   Margin="0,93,0,0"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>