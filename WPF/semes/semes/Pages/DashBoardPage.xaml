<Page x:Class="semes.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:semes"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1050"
      Title="DashboardPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- 왼쪽 차트 영역 -->
        <Grid Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 원형 차트 영역 -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 전체 불량률 차트 -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="전체 불량률" 
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,20"/>

                    <Grid Width="200" Height="200">
                        <Ellipse Stroke="{DynamicResource MaterialDesignDivider}" 
                                 StrokeThickness="20" 
                                 Fill="Transparent"/>

                        <Path Stroke="#29B6F6" 
                              StrokeThickness="20" 
                              StrokeStartLineCap="Round" 
                              StrokeEndLineCap="Round">
                            <Path.Data>
                                <PathGeometry>
                                    <PathFigure StartPoint="100,20">
                                        <ArcSegment Size="80,80" 
                                                   IsLargeArc="False" 
                                                   SweepDirection="Clockwise" 
                                                   Point="180,100"/>
                                    </PathFigure>
                                </PathGeometry>
                            </Path.Data>
                        </Path>

                        <TextBlock Text="62%" 
                                   Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>

                <!-- 불량 검출 차트 -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="불량 검출" 
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,20"/>

                    <Grid Width="200" Height="200">
                        <Ellipse Stroke="{DynamicResource MaterialDesignDivider}" 
                                 StrokeThickness="20" 
                                 Fill="Transparent"/>

                        <Path Stroke="#F44336" 
                              StrokeThickness="20" 
                              StrokeStartLineCap="Round" 
                              StrokeEndLineCap="Round">
                            <Path.Data>
                                <PathGeometry>
                                    <PathFigure StartPoint="100,20">
                                        <ArcSegment Size="80,80" 
                                                   IsLargeArc="False" 
                                                   SweepDirection="Clockwise" 
                                                   Point="140,170"/>
                                    </PathFigure>
                                </PathGeometry>
                            </Path.Data>
                        </Path>

                        <TextBlock Text="34%" 
                                   Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </Grid>

            <!-- 통계 정보 -->
            <StackPanel Grid.Row="2" Margin="20">
                <Grid Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon Kind="ChartLineVariant" 
                                           Foreground="#E53935"
                                           VerticalAlignment="Center" 
                                           Margin="0,0,10,0"/>
                    <TextBlock Grid.Column="1" 
                               Text="지난 7일 평균 불량률: 29%" 
                               VerticalAlignment="Center"/>
                </Grid>

                <Grid Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon Kind="TrendingUp" 
                                           Foreground="#2196F3"
                                           VerticalAlignment="Center" 
                                           Margin="0,0,10,0"/>
                    <TextBlock Grid.Column="1" 
                               Text="전일 대비: 5% 상승" 
                               VerticalAlignment="Center"/>
                </Grid>

                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon Kind="Alert" 
                                           Foreground="#FFC107"
                                           VerticalAlignment="Center" 
                                           Margin="0,0,10,0"/>
                    <TextBlock Grid.Column="1" 
                               Text="전체 불량률이 기준치(60%)를 초과했습니다." 
                               VerticalAlignment="Center"
                               Foreground="#FFC107"/>
                </Grid>
            </StackPanel>
        </Grid>

        <!-- 오른쪽 정보 패널 -->
        <materialDesign:Card Grid.Column="1" Margin="0,10,10,10">
            <StackPanel Margin="16">
                <TextBlock Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                           Text="검사이력" 
                           Margin="0,0,0,16"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="검사 수:" Margin="0,0,10,8"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="214 건" Margin="0,0,0,8" FontWeight="SemiBold"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="양품 수:" Margin="0,0,10,8"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="145 건" Margin="0,0,0,8" FontWeight="SemiBold"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="불량 수:" Margin="0,0,10,8"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="68 건" Margin="0,0,0,8" FontWeight="SemiBold"/>
                </Grid>

                <!-- 달력 -->
                <Calendar Margin="0,20,0,0" Language="ko"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Page>