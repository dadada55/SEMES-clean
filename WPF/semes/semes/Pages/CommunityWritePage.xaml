<Page x:Class="semes.Pages.CommunityWritePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="CommunityWritePage">
    
    <Grid>
        <materialDesign:Card Padding="30" Background="White" Margin="10">
            <StackPanel>
                <TextBlock Text="게시글 작성" FontSize="20" FontWeight="Bold" Margin="10 10 0 60"/>

                <TextBox x:Name="txtTitle"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="제목"
                         Margin="150 0 150 10"/>

                <TextBox x:Name="txtContent"
                         Height="150"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="내용"
                         Margin="150 20 150 20"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 50 150 0">
                    <Button Content="취소" Margin="0 0 10 0" Click="Cancel_Click"
                            Style="{StaticResource MaterialDesignOutlinedButton}" Width="80"/>
                    <Button Content="등록" Click="Register_Click"
                            Style="{StaticResource MaterialDesignOutlinedButton}" Width="80"/>
                </StackPanel>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Page>