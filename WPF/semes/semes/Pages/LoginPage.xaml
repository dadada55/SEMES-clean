<Page x:Class="semes.Features.Auth.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:semes.Features.Auth.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1050"
      Title="Login">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.WindowColorKey}}" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- 로그인 카드 -->
        <Border Grid.Row="1" 
                Width="400" 
                VerticalAlignment="Center" 
                Margin="0,20,0,0" 
                Background="White" 
                CornerRadius="8" 
                Padding="30"
                Effect="{StaticResource MaterialDesignShadowDepth3}">
            <StackPanel>
                <Image x:Name="LogoImage"
           Source="/semes;component/Resources/semes_logo.png"
           Width="240"
           Margin="0,0,0,40"
           HorizontalAlignment="Center"/>
                <TextBlock Text="로그인" 
               FontSize="24" 
               FontWeight="Bold" 
               Margin="0,0,0,20" 
               HorizontalAlignment="Center"/>
                <!-- 아이디 입력 -->
                <TextBox x:Name="UsernameTextBox"
             Margin="0,10,0,15"
             FontSize="14">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
                            <Setter Property="materialDesign:HintAssist.Hint" Value="아이디"/>
                            <Setter Property="BorderThickness" Value="1"/>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <!-- 비밀번호 입력 -->
                <PasswordBox x:Name="PasswordBox"
                 Margin="0,10,0,20"
                 FontSize="14">
                    <PasswordBox.Style>
                        <Style TargetType="PasswordBox" BasedOn="{StaticResource MaterialDesignPasswordBox}">
                            <Setter Property="materialDesign:HintAssist.Hint" Value="비밀번호"/>
                            <Setter Property="BorderThickness" Value="1"/>
                        </Style>
                    </PasswordBox.Style>
                </PasswordBox>
                <!-- 자동 로그인 체크박스 -->
                <CheckBox x:Name="RememberMeCheckBox" 
              Content="자동 로그인" 
              Margin="0,0,0,20" 
              FontSize="13"/>
                <!-- 로그인 버튼 -->
                <Button x:Name="LoginButton" 
            Content="로그인" 
            Height="45" 
            Margin="0,10,0,15"
            Background="#FF0078D7"
            BorderBrush="#FF0078D7"
            FontSize="15"
            Click="LoginButton_Click">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                            <Setter Property="BorderThickness" Value="1"/>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- 에러 메시지 TextBlock 추가 -->
                <TextBlock x:Name="lblErrorMessage"
               Text=""
               Foreground="Red"
               FontSize="13"
               HorizontalAlignment="Center"
               Margin="0,0,0,10"
               Visibility="Collapsed"
               TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>