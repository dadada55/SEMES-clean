<Page x:Class="semes.Pages.CommunityPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:pages="clr-namespace:semes.Pages"
      xmlns:converters="clr-namespace:semes.Converters"
      mc:Ignorable="d"
      Title="CommunityPage">

    <Page.Resources>
        <converters:AuthorVisibilityConverter x:Key="AuthorVisibilityConverter"/>

        <!-- 하이테크 블루 그라데이션 -->
        <LinearGradientBrush x:Key="MainBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#E3F2FD" Offset="0"/>
            <GradientStop Color="#F5F5F5" Offset="1"/>
        </LinearGradientBrush>

        <!-- 헤더 그라데이션 -->
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1976D2" Offset="0"/>
            <GradientStop Color="#2196F3" Offset="1"/>
        </LinearGradientBrush>

        <!-- 글래스모피즘 효과 -->
        <LinearGradientBrush x:Key="GlassEffect" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#30FFFFFF" Offset="0"/>
            <GradientStop Color="#10FFFFFF" Offset="1"/>
        </LinearGradientBrush>

        <!-- 카드 스타일 -->
        <Style x:Key="TechCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1E5E9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#1976D2" BlurRadius="10" ShadowDepth="0" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#1976D2" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#FFFFFF" Offset="0"/>
                                <GradientStop Color="#F7F9FC" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 하이테크 버튼 스타일 -->
        <Style x:Key="TechButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" 
                                CornerRadius="25"
                                Padding="20,10">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#1976D2" Offset="0"/>
                                    <GradientStop Color="#2196F3" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#1976D2" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#1976D2" BlurRadius="25" ShadowDepth="0" Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- 검색 박스 스타일 -->
        <Style x:Key="TechSearchBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1E5E9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="25">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost" 
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#2196F3"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#2196F3" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource MainBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 헤더 영역 -->
        <Border Grid.Row="0" Background="{StaticResource HeaderGradient}" Padding="30,25">
            <Border.Effect>
                <DropShadowEffect Color="#1976D2" BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 제목 영역 -->
                <StackPanel VerticalAlignment="Center">
                    <TextBlock 
                FontSize="28" 
                FontWeight="Bold" 
                Foreground="White" Text="사내 게시판 ">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#1976D2" BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
                        </TextBlock.Effect></TextBlock>
                    <TextBlock 
                FontSize="14" 
                Foreground="#E3F2FD" 
                Margin="0,5,0,0"><Run Language="ko-kr" Text="SEMES 아산 사업장 "/></TextBlock>
                </StackPanel>

                <!-- 검색 및 글쓰기 영역 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- 검색 영역 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBox x:Name="SearchBox" 
                                 Style="{StaticResource TechSearchBox}"
                                 Text="게시글 검색..."
                                 Foreground="#999999"
                                 Width="280" TextChanged="SearchBox_TextChanged_1"/>
                        <Button Background="White" 
                                BorderThickness="0" 
                                Width="45" 
                                Height="45" 
                                Margin="-45,0,0,0"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="22.5">
                                        <Grid Width="20" Height="20">
                                            <Ellipse Width="12" Height="12" Stroke="#1976D2" StrokeThickness="2"/>
                                            <Path Data="M15,15 L20,20" Stroke="#1976D2" StrokeThickness="2"/>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                    <!-- 글쓰기 버튼 -->
                    <Button Style="{StaticResource TechButton}"
                            Click="WritePost_Click">
                        <StackPanel Orientation="Horizontal">
                            <!-- 편집 아이콘 -->
                            <Grid Width="18" Height="18" Margin="0,0,8,0">
                                <Rectangle Width="14" Height="14" Stroke="White" StrokeThickness="2" RadiusX="2" RadiusY="2"/>
                                <Path Data="M2,6 L9,6 M2,8 L11,8 M2,10 L7,10" Stroke="White" StrokeThickness="1.5"/>
                            </Grid>
                            <TextBlock Text="새 글 작성"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 게시글 목록 -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="15"
                      Background="Transparent">
            <ItemsControl x:Name="postListView">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource TechCardStyle}" 
                                Cursor="Hand"
                                MouseLeftButtonDown="PostCard_MouseLeftButtonDown">
                            <Grid Margin="25">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- 상단: 제목과 상태 배지 -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding Title}" 
                                               FontSize="19" 
                                               FontWeight="SemiBold"
                                               Foreground="#333333"
                                               TextTrimming="CharacterEllipsis"
                                               TextWrapping="NoWrap"/>

                                    <!-- NEW 배지 -->
                                    <Border Grid.Column="1" 
                                            Background="{StaticResource HeaderGradient}" 
                                            CornerRadius="15" 
                                            Padding="10,5"
                                            Margin="15,0,0,0">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#1976D2" BlurRadius="5" ShadowDepth="0" Opacity="0.3"/>
                                        </Border.Effect>
                                        <TextBlock Text="NEW" 
                                                   FontSize="11" 
                                                   FontWeight="Bold" 
                                                   Foreground="White"/>
                                    </Border>
                                </Grid>

                                <!-- 내용 미리보기 -->
                                <TextBlock Grid.Row="1" 
                                           Text="{Binding Content}"
                                           FontSize="14"
                                           Foreground="#666666"
                                           TextTrimming="CharacterEllipsis"
                                           MaxHeight="40"
                                           TextWrapping="Wrap"
                                           Margin="0,12,0,18"/>

                                <!-- 구분선 -->
                                <Border Grid.Row="2" 
                                        Height="1" 
                                        Background="#E1E5E9" 
                                        Margin="0,5,0,18"/>

                                <!-- 하단: 작성자 정보와 통계 -->
                                <Grid Grid.Row="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 작성자 정보 -->
                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <!-- 아바타 -->
                                        <Border Background="{StaticResource HeaderGradient}" 
                                                CornerRadius="25" 
                                                Width="45" 
                                                Height="45">
                                            <Border.Effect>
                                                <DropShadowEffect Color="#1976D2" BlurRadius="5" ShadowDepth="0" Opacity="0.3"/>
                                            </Border.Effect>
                                            <TextBlock Text="{Binding Author, StringFormat='{}{0:C1}'}" 
                                                       Foreground="White" 
                                                       FontSize="18"
                                                       FontWeight="Bold" 
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"/>
                                        </Border>

                                        <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Author}" 
                                                       FontSize="15" 
                                                       FontWeight="SemiBold"
                                                       Foreground="#333333"/>
                                            <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:yyyy/MM/dd HH:mm}'}" 
                                                       FontSize="12" 
                                                       Foreground="#999999"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- 통계 정보 -->
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                        <!-- 좋아요 -->
                                        <Border Background="#E3F2FD" 
                                                CornerRadius="18" 
                                                Padding="10,6" 
                                                Margin="5,0">
                                            <StackPanel Orientation="Horizontal">
                                                <!-- 하트 아이콘 -->
                                                <Path Data="M13,10 L17,6 L21,10 L17,21 Z M13,10 L9,6 L5,10 L9,21 Z" 
                                                      Fill="#1976D2" 
                                                      Width="14" Height="14"/>
                                                <TextBlock Text="0" FontSize="12" Margin="5,0,0,0" Foreground="#1976D2" FontWeight="SemiBold"/>
                                            </StackPanel>
                                        </Border>

                                        <!-- 댓글 -->
                                        <Border Background="#E8F5E9" 
                                                CornerRadius="18" 
                                                Padding="10,6" 
                                                Margin="5,0">
                                            <StackPanel Orientation="Horizontal">
                                                <!-- 댓글 아이콘 -->
                                                <Rectangle Width="12" Height="10" Stroke="#4CAF50" StrokeThickness="2" RadiusX="3" RadiusY="3"/>
                                                <TextBlock Text="0" FontSize="12" Margin="5,0,0,0" Foreground="#4CAF50" FontWeight="SemiBold"/>
                                            </StackPanel>
                                        </Border>

                                        <!-- 조회수 -->
                                        <Border Background="#FFF3E0" 
                                                CornerRadius="18" 
                                                Padding="10,6" 
                                                Margin="5,0">
                                            <StackPanel Orientation="Horizontal">
                                                <!-- 눈 아이콘 -->
                                                <Ellipse Width="14" Height="10" Stroke="#FF9800" StrokeThickness="2"/>
                                                <Ellipse Width="4" Height="4" Fill="#FF9800" Margin="-9,0,0,0"/>
                                                <TextBlock Text="0" FontSize="12" Margin="8,0,0,0" Foreground="#FF9800" FontWeight="SemiBold"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>