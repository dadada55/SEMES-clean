<Page x:Class="semes.DefectDetectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:semes"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1050"
      Title="DefectDetectionPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- 상단 도구 모음 -->
        <materialDesign:Card Grid.Row="0" Grid.Column="0" Margin="10,10,10,10" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="5"
                    Content="이미지 업로드"/>

                <Button 
                    x:Name="DefectBtn"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="5"
                    Content="불량검출" Click="DefectBtn_Click"/>

                <Button
                    x:Name="ClearBtn"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="5"
                    Content="초기화" Click="ClearBtn_Click"/>

                <TextBlock 
                    VerticalAlignment="Center" 
                    Margin="20,0,0,0" 
                    Text="표시 옵션:"/>

                <CheckBox 
                    Margin="10,0,0,0" 
                    Content="불량 표시"
                    IsChecked="True"
                    Checked="DefectVisibility_Checked"
                    Unchecked="DefectVisibility_Unchecked"
                    x:Name="DefectVisibilityCheckBox"/>
            </StackPanel>
        </materialDesign:Card>

        <!-- PCB 이미지 표시 영역 -->
        <Border Grid.Row="1" Grid.Column="0" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1" Margin="10,0,10,10">
            <!-- Grid를 사용하여 이미지와 Canvas를 겹침 -->
            <Grid x:Name="PCBContainer">
                <!-- PCB 이미지 - 원래 스타일 유지 -->
                <Image x:Name="PCBImage" Stretch="Uniform">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Source" Value="/semes;component/Resources/pcb_with_dies.tif"/>
                        </Style>
                    </Image.Style>
                </Image>

                <!-- 불량 위치 표시를 위한 Canvas - 투명 배경 -->
                <Canvas x:Name="DefectCanvas" Background="Transparent"/>
            </Grid>
        </Border>

        <!-- 오른쪽 정보 패널 -->
        <Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Margin="0,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- PCB 정보 카드 -->
            <materialDesign:Card Grid.Row="0" Margin="0,0,0,10" Padding="16">
                <StackPanel>
                    <TextBlock 
                        Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                        Margin="0,0,0,16" 
                        Text="PCB 정보"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="크기:" Margin="0,0,10,8"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="77.5mm x 240mm" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="해상도:" Margin="0,0,10,8"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="4000 x 12000" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="데이터 크기:" Margin="0,0,10,8"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="약 190MB" Margin="0,0,0,8"/>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>

            <!-- 검출 결과 카드 -->
            <materialDesign:Card Grid.Row="1" Margin="0,0,0,10" Padding="16">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock 
                            Grid.Column="0"
                            Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                            VerticalAlignment="Center"
                            Text="검출 결과"/>

                        <Button 
                            Grid.Column="1"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Content="결과 내보내기"
                            Click="ExportResult_Click"/>
                    </Grid>

                    <Border Height="150" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1" Margin="0,8,0,0">
                        <ScrollViewer>
                            <StackPanel x:Name="DefectResultsPanel">
                                <!-- 검출 결과가 여기에 표시됩니다 -->
                                <TextBlock x:Name="NoDefectsMessage"
                                           Text="검출된 불량이 없습니다." 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"
                                           Margin="0,60,0,0"
                                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            </StackPanel>
                        </ScrollViewer>

                    </Border>
                </StackPanel>
            </materialDesign:Card>

            <!-- 불량 상세 정보 카드 -->
            <materialDesign:Card Grid.Row="2" Margin="0,0,0,10" Padding="16">
                <StackPanel>
                    <TextBlock 
                                Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                                Margin="0,0,0,16" 
                                Text="불량 상세 정보"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="불량 ID:" Margin="0,0,10,8"/>
                        <TextBlock x:Name="DefectIdValue" Grid.Row="0" Grid.Column="1" Text="-" Margin="0,0,0,8"/>
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="위치 (X,Y):" Margin="0,0,10,8"/>
                        <TextBlock x:Name="DefectPositionValue" Grid.Row="1" Grid.Column="1" Text="-" Margin="0,0,0,8"/>
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="높이:" Margin="0,0,10,8"/>
                        <TextBlock x:Name="DefectHeightValue" Grid.Row="2" Grid.Column="1" Text="-" Margin="0,0,0,8"/>
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="크기:" Margin="0,0,10,8"/>
                        <TextBlock x:Name="DefectSizeValue" Grid.Row="3" Grid.Column="1" Text="-" Margin="0,0,0,8"/>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>
            <!-- 작업 버튼 -->
            <!--
            <Button 
                Grid.Row="3"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Content="불량 위치로 이동"
                HorizontalAlignment="Stretch"
                Height="40"/>
            -->
        </Grid>
    </Grid>
</Page>